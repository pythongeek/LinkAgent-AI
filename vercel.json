{
  "version": 2,
  "name": "linkedin-content-platform",
  "buildCommand": "cd backend && npm install && npx prisma generate",
  "installCommand": "cd backend && npm install",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 30,
      "includeFiles": "backend/**"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}

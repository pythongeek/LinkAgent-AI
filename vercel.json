{
  "version": 2,
  "name": "linkedin-content-platform",
  "installCommand": "cd backend && npm install",
  "builds": [
    {
      "src": "backend/src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/server.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/src/server.ts": {
      "maxDuration": 30
    }
  }
}

# Database Configuration (Neon or Supabase)
DATABASE_URL=postgresql://username:password@hostname/database?sslmode=require

# Redis Configuration (Upstash or Local)
REDIS_URL=rediss://username:password@hostname:port

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Google Custom Search API (for research)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Image Generation (Pollinations - no key needed, or HuggingFace)
IMAGE_PROVIDER=pollinations
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# JWT Secret for Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Encryption Key for LinkedIn Cookies (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# LinkedIn Scraping Configuration
SCRAPER_MIN_DELAY=3000
SCRAPER_MAX_CONCURRENT=1
SCRAPER_MAX_PER_HOUR=20

# Feature Flags
ENABLE_LINKEDIN_SCRAPING=true
ENABLE_IMAGE_GENERATION=true
ENABLE_FACT_CHECKING=true
